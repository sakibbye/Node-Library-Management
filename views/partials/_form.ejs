 <!--Form  Handling-->
 <form action="/api/books" method="POST" id="add_book">
    <div class="new_book">
        <div class="form-group">
            <label for="title" class="text-light">Title</label>
            <input type="text" name="title" value="" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="author" class="text-light">Author</label>
          <input type="text" name="author" value="" placeholder="Author">
        </div>
        <div class="form-group">
            <label for="isbn" class="text-light">ISBN</label>
            <input type="text" name="isbn" value="" placeholder="ISBN No.">
        </div>
      <div class="form-group">
          <label for="status" class="text-light">Status</label>
          <div class="radio inline">
              <input type="radio" id="status-available" name="status" value="Available">
              <label for="status-available" class="radio-label">Available</label>
          </div>
          <div class="radio inline">
              <input type="radio" id="status-unavailable" name="status" value="Unavailable">
              <label for="status-unavailable" class="radio-label">Unavailable</label>
          </div>
      </div>

      <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </div>
</form>