<!--include header-->
<%- include('partials/_header')%>
<!--include header-->

<!--Main Site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/dashboard"><i class="fa fa-angle-double-left"></i>All Books</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Books</h2>
      <span class="text-light">Update Book Information</span>
    </div>

    <!--Update Book form-->
    <!--Form  Handling-->
    <form method="POST" id="update_book">
      <div class="new_book">
        <div class="form-group">
          <label for="title" class="text-light">Title</label>
          <input type="hidden" name="id" value="<%= book._id %>">
          <input type="text" name="title" value="<%= book.title %>" placeholder="Title" />
        </div>
        <div class="form-group">
          <label for="author" class="text-light">Author</label>
          <input type="text" name="author" value="<%= book.author %>" placeholder="Author" />
        </div>
        <div class="form-group">
          <label for="isbn" class="text-light">ISBN</label>
          <input type="text" name="isbn" value="<%= book.isbn %>" placeholder="ISBN No." />
        </div>
        <div class="form-group">
          <label for="status" class="text-light">Status</label>
          <div class="radio inline">
            <input
              type="radio"
              id="status-available"
              name="status"
              value="Available"
              <%= book.status=='Available' ? 'checked': '' %>
            />
            <label for="status-available" class="radio-label">Available</label>
          </div>
          <div class="radio inline">
            <input
              type="radio"
              id="status-unavailable"
              name="status"
              value="Unavailable"8
              <%= book.status=='Unvailable' ? 'checked': '' %>
            />
            <label for="status-unavailable" class="radio-label"
              >Unavailable</label
            >
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!--Main Site-->

<!--include footer-->
<%- include('partials/_footer')%>
<!--include footer-->
